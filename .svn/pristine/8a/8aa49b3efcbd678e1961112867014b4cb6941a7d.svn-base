html, body, .layout-body {
    height: 100%;
    width: 100%;
    overflow: hidden;
    margin: 0;
    padding: 0;
}

#wrap {
    height: 84%;
    overflow: auto;
}

.layout {
    width: 100%;
    background: #f5f7f9;
    position: relative;
}

#layout-sider {
    display: inline;
    float: left;
    width: 13%;
    height: 100%;
    background: #242831;
    overflow-x: hidden;
    overflow-y: scroll;
    scrollbar-width: none; /* Firefox */
    -ms-overflow-style: none; /* IE 10+ */
    padding-top: 2%;
}

.ivu-layout-sider {
    width: 100% !important;
    min-width: 100% !important;
    max-width: 100% !important;
    flex: 100% !important;
}

.ivu-layout-sider::-webkit-scrollbar {
    width: 0; /* Chrome隐藏滚动条 */
}

.layout-main {
    float: right;
    width: 87%;
    height: 100%;
    border: 24px solid #FFF5EE;
    overflow-x: hidden;
    overflow-y: scroll;
    scrollbar-width: none; /* Firefox */
    -ms-overflow-style: none; /* IE 10+ */
}

.layout-main::-webkit-scrollbar {
    width: 0; /* Chrome隐藏滚动条 */
}

.layout-logo-img {
    width: 45%;
    height: 64px;
    float: left;
}

.layout-logo-img img {
    width: 100%;
    height: 100%;
    border-radius: 5px;
}

.layout-logo {
    width: 365px;
    height: 50px;
    background: #01467f;
    border-radius: 3px;
    float: left;
    position: relative;
    top: 7px;
    left: 20px;
    color: #fff;
    line-height: 48px;
    font-size: 40px;
}

.layout-nav {
    width: 420px;
    margin: 0 auto;
    margin-right: 20px;
    color: #fff;
}

.nowTime {
    font-size: 12px;
    margin-left: 20px;
}

#layout-sider::-webkit-scrollbar {
    width: 0;
    height: 0;
}

#layout-foot {
    height: 12%;
    background: #242831;
    border-top: 1px solid #d7dde4;
    text-align: center;
}

.footerSpan {
    font: 25px "Microsoft Yahei", "Helvetica Neue";
    line-height: 60px;
    font-weight: 15;
    color: #FFFFFF;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    -moz-font-feature-settings: "liga", "kern";
}

.outer-container {
    position: relative;
    overflow: hidden;
}

.ivu-menu-primary {
    background: #01467f;
}

.ivu-layout-header {
    background: #242831;
}

.ivu-menu-dark {
    background: #242831;
}

#todo_affair_count {
	color: #DF1B20;
} 

.item {
  margin-left: 10px;
}

.el-badge__content.is-fixed {
	top: 15px !important;
}

